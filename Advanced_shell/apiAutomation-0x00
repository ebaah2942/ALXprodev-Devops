#!/bin/bash

# Define the API URL
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Make the API request and save to data.json
curl -s -o data.json -w "%{http_code}" "$API_URL" > status_code.txt

# Read the status code
STATUS_CODE=$(cat status_code.txt)

# Check if the request was successful (HTTP 200)
if [ "$STATUS_CODE" -ne 200 ]; then
    echo "Error: Failed to fetch data for Pikachu. Status code: $STATUS_CODE" >> errors.txt
    rm -f data.json
fi

# Clean up
rm -f status_code.txt

